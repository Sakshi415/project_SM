<div id="<%= dom_id comment %>">
  <strong>Content:</strong>
<%= comment.content %>
<hr><hr/>
<small>by
<% if comment.user %>
  <%= comment.user.email %>
<% else %>
  Anonymous
<% end %>
</small>
</p>

<% if comment.user %>
  <p>
    <strong>User:</strong>
    <%= comment.user.name %>
  </p>
  <% end %>

  <p>
    <strong>Post:</strong>
    <%= comment.post_id %>
  </p>

</div>
